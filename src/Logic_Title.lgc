ion(ego, 0, 160);  set.view(ego, Larry_running);  set.loop(ego, 0);                         [ Normal run left -> right of larry  sound(Music_Title_Main, boolMusicEnded);    varScriptStep = 0;  add.to.pic(Title_Animated_LSL_Title, 0, 0, 4, 18, 4, 4);  add.to.pic(Title_Animated_LSL_Title, 0, 1, 4, 36, 4, 4);  add.to.pic(Title_Animated_LSL_Title, 0, 2, 46, 36, 4, 4);  add.to.pic(Title_Animated_LSL_Title, 0, 3, 11, 87, 4, 4);  varTimingDelay = 8;  show.pic();  return();  }[ end onLoad  [ Running [ Timing management[ Delay is over ?if (isset(boolTimingScriptDone))  {  reset(boolTimingScriptDone);  ++varScriptStep;    [ Case PageStep = 1 : main page title & Doll  if (varScriptStep == 1)                                     {    draw(Obj_animatedPNJ1);                              [ Add flying doll and start move    move.obj(Obj_animatedPNJ1, 36, 94, 2, boolTimingScriptDone);    }  [ Case PageStep = 2 : Adding Larry  if (varScriptStep == 2)                             [ Doll keep move and Larry run after    {    move.obj(Obj_animatedPNJ1, 136, 94, 2, boolTimingScriptDone);    draw(ego);    move.obj(ego, 80, 160, 3, boolTimingScriptDone);    }      [ Case PageStep = 3 (CopyRight)  if (varScriptStep == 3)                             [ add copyright infos    {    if (monitorType != MONO)      {      display(23, 3, "Adventure Game Development System");      display(24, 4, "(C) 1987 by Sierra On-Line, Inc.");      }    set.loop(ego, 2);                                   [ Larry Jump and run ->    fix.loop(ego);    move.obj(ego, 149, 160, 2, boolTimingScriptDone);    }      [ Case PageStep = 4 : Doll is out  if (varScriptStep == 4)                             [ remove Doll    {    erase(Obj_animatedPNJ1);    }  [ Case PageStep = 5 : remove Copyright  if (varScriptStep == 5)                            {    erase(ego);                                          [ Remove Larry     if (monitorType != MONO)                             [ Remove Copyright infos      {      clear.lines(23, 24, BLACK);      }    draw.pic(varPickedQuestion2);                        [ Change Background #1    position(Obj_animatedPNJ2, 41, 94);                  [ Set Programmed By graph    draw(Obj_animatedPNJ2);    show.pic();    varTimingDelay = 8;    }  [ Case PageStep = 6 : Change programmed -> Designed By  if (varScriptStep == 6)    {    set.cel(Obj_animatedPNJ2, 1);    reposition.to(Obj_animatedPNJ2, 41, 114);    set.loop(Obj_animatedPNJ1, 1);                       [ return of the Doll  <-    draw(Obj_animatedPNJ1);    move.obj(Obj_animatedPNJ1, 100, 94, 2, boolTimingScriptDone);    }      [ Case PageStep = 7 : Doll still run add Larry running  if (varScriptStep == 7)    {    move.obj(Obj_animatedPNJ1, 0, 94, 2, boolTimingScriptDone);    set.loop(ego, 1);                                    [ Larry Run <-    draw(ego);    move.obj(ego, 50, 160, 3, boolTimingScriptDone);    }      [ Case PageStep = 8 : Change programmed by second graphics; larry jump and run <-  if (varScriptStep == 8)    {    set.loop(ego, 3);               fix.loop(ego);    move.obj(ego, 0, 160, 2, boolTimingScriptDone);    }      [ Case PageStep = 9 : remove Doll  if (varScriptStep == 9)    {    erase(Obj_animatedPNJ1);    }  [ Case PageStep = 10 : Remove Larry Change Bg to BG2 and load new graphics  if (varScriptStep == 10)    {    erase(ego);                         [ Change Larry to walking larry    set.view(ego, Larry_StandAndWalk);    erase(Obj_animatedPNJ2);    draw.pic(varPickedQuestion3);    set.view(Obj_animatedPNJ2, Title_Graphic_Writed); [ Load new graphics text    set.cel(Obj_animatedPNJ2, 0);    position(Obj_animatedPNJ2, 53, 80);    draw(Obj_animatedPNJ2);    show.pic();    varTimingDelay = 9;    }      [ Case PageStep = 11 : Show Writed by  if (varScriptStep == 11)    {    set.cel(Obj_animatedPNJ2, 1);    reposition.to(Obj_animatedPNJ2, 65, 84);    varTimingDelay = 8;    }      [ Case PageStep = 12 : Change Background & Display Music By  if (varScriptStep == 12)    {    erase(Obj_animatedPNJ2);    draw.pic(varPickedQuestion4);    add.to.pic(Title_Music_Developpement, 0, 0, 68, 59, 4, 4);    add.to.pic(Title_Music_Developpement, 0, 1, 25, 155, 4, 4);    show.pic();    varTimingDelay = 8;    }      [ Case PageStep = 13 : Return to Previous background & Display Music By  if (varScriptStep == 13)    {    draw.pic(varPickedQuestion3);    add.to.pic(Title_Cameo_Coding, 0, 0, 64, 84, 4, 4);    show.pic();    varTimingDelay = 3;    }      [ Case PageStep = 14 : Reload title...  if (varScriptStep == 14 && !isset(soundOn))    {     new.room(Logic_Title); [ ##LE001##    }      }[  Delay Time Over[ if music end....  if (isset(boolMusicEnded))  {  if (varScriptStep > 13)    {     new.room(Logic_Title); [ ##LE002##    }  else    {    sound(Music_Title_Main, boolMusicEnded);    }  }return();[ Messages#message 2 "Adventure Game Development System"#message 3 "(C) 1987 by Sierra On-Line, Inc."